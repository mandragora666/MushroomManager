{
  "name": "mushroom-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "wrangler pages dev dist --d1=mushroom-manager-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name mushroom-manager",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name mushroom-manager --compatibility-date 2025-10-04",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/stats",
    "db:migrate:local": "wrangler d1 migrations apply mushroom-manager-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply mushroom-manager-production", 
    "db:seed": "wrangler d1 execute mushroom-manager-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute mushroom-manager-production --local",
    "db:console:prod": "wrangler d1 execute mushroom-manager-production",
    "git:commit": "git add . && git commit -m",
    "git:push": "git push origin main",
    "git:status": "git status --porcelain",
    "auto-deploy": "./AUTO_DEPLOY_SCRIPT.sh",
    "quick-deploy": "./AUTO_DEPLOY_SCRIPT.sh 'Quick deployment update'"
  },
  "dependencies": {
    "hono": "^4.6.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "vite": "^5.4.8",
    "wrangler": "^3.78.0",
    "typescript": "^5.6.2"
  }
}