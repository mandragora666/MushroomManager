{
  "name": "mushroom-manager",
  "version": "1.0.0",
  "description": "Pilzzucht Verwaltungsapp - Substrate, Protokolle und Inventar verwalten",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name mushroom-manager",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name mushroom-manager",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "db:create": "wrangler d1 create mushroom-manager-production",
    "db:migrate:local": "wrangler d1 migrations apply mushroom-manager-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply mushroom-manager-production", 
    "db:seed:local": "wrangler d1 execute mushroom-manager-production --local --file=./seed_data.sql",
    "db:seed:prod": "wrangler d1 execute mushroom-manager-production --file=./seed_data.sql",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    "db:console:local": "wrangler d1 execute mushroom-manager-production --local",
    "db:console:prod": "wrangler d1 execute mushroom-manager-production",
    "dev:d1": "wrangler pages dev dist --d1=mushroom-manager-production --local --ip 0.0.0.0 --port 3000"
  },
  "keywords": ["pilzzucht", "mushroom", "verwaltung", "substrat", "protokoll", "inventar"],
  "author": "C.leitgeb@gmx.net",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}